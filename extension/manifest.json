{
	"manifest_version": 2,
	"name": "Roblox DevHub Search",
	"version": "1.2.0",
	"description": "Search the Roblox DevHub",
	"author": "Stephen Leitnick",
	"options_ui": {	
		"page": "options/options.html",
		"browser_style": true
	},
	"browser_action": {
		"default_popup": "popup/popup.html"
	},
	"icons": {
		"16": "icons/16.png",
		"48": "icons/48.png",
		"96": "icons/96.png",
		"128": "icons/128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "rbxdevhubsearch@sleitnick.com"
		}
	},
	"permissions": ["storage"]
}